@model YoteiDenpyoTourokuVM
@{
    ViewData["Title"] = "予定伝票入力";
}

<h2 class="text-center mb-5">予定伝票入力</h2>

<form asp-controller="YoteiDenpyoTouroku"
      asp-action="Index"
      method="post">

    @Html.AntiForgeryToken()

    <div class="container">

        <!-- ===== 伝票番号 + Buttons ===== -->
        <div class="row mb-3 align-items-center">

            <label class="col-2 col-form-label">伝票番号</label>

            <div class="col-2">
                <input asp-for="Denpyono"
                       type="number"
                       readonly
                       class="form-control">
            </div>

            <div class="col-8 text-end">

                <button type="submit"
                        name="actionType"
                        value="register"
                        class="btn btn-primary me-2">
                    登録
                </button>

                <button type="submit"
                        name="actionType"
                        value="delete"
                        class="btn btn-danger me-2"
                        @(Model.isCreated ? "" : "disabled")>
                    削除
                </button>

                <button type="submit"
                        name="actionType"
                        value="exit"
                        class="btn btn-secondary">
                    終了
                </button>

            </div>
        </div>

        <!-- ===== 伝票日付 ===== -->
        <div class="row mb-3 align-items-center">

            <label class="col-2 col-form-label">伝票日付</label>

            <div class="col-2">
                <input asp-for="Denpyodt"
                       type="date"
                       readonly
                       class="form-control">
            </div>

            <label class="col-2 col-form-label text-center">出納方法</label>

            <div class="col-2">
                <select asp-for="Suitokb" class="form-select">
                    <option value="" hidden>-- Select option --</option>
                    <option value="現金">現金</option>
                    <option value="振込">振込</option>
                </select>
            </div>

            <label class="col-2 col-form-label text-center">支払予定日</label>

            <div class="col-2">
                <input asp-for="Shiharaidt"
                       type="date"
                       class="form-control">
            </div>

        </div>

        <!-- ===== 年度 ===== -->
        <div class="row mb-3 align-items-center">
            <label class="col-2 col-form-label">年度</label>
            <div class="col-2">
                <input asp-for="Kaikeind"
                       type="number"
                       class="form-control"
                       placeholder="xxxx年度">
            </div>
        </div>

        <!-- ===== 申請日 ===== -->
        <div class="row mb-3 align-items-center">
            <label class="col-2 col-form-label">申請日</label>
            <div class="col-2">
                <input asp-for="Uketukedt"
                       type="date"
                       class="form-control">
            </div>
        </div>

        <!-- ===== 起票部門 ===== -->
        <div class="row mb-3 align-items-center">
            <label class="col-2 col-form-label">起票部門</label>
            <div class="col-2">
                <input asp-for="BumoncdYkanr"
                       type="text"
                       class="form-control">
            </div>
        </div>

        <!-- ===== 出張目的 ===== -->
        <div class="row mb-3 align-items-center">
            <label class="col-2 col-form-label">出張目的</label>
            <div class="col-2">
                <textarea asp-for="Biko" type="text" class="form-control">
                    出張目的   
                </textarea>
            </div>
        </div>

        <!-- ===== 備考 ===== -->
        <div class="row mb-3 align-items-center">
            <label class="col-2 col-form-label">（備考）</label>
        </div>

    </div>
</form>
